rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública y escritura autenticada para guías
    match /guias/{guiaId}/{filename} {
      allow read: if true;
      allow create: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow update: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null;
    }

    // Permitir uploads en subdirectorios de guías
    match /guias/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Configuración por defecto: rechazar todo lo que no sea explícitamente permitido
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
